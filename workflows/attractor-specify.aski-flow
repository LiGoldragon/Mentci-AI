;; Re-implementation of Attractor: pipelines/factory/specify.dot

[ (clarify
    {:label "Clarify Scope"
     :prompt "@prompts/specify/clarify.md"
     :reasoning_effort "high"})

  (require
    {:label "Write Requirements"
     :prompt "@prompts/specify/require.md"
     :reasoning_effort "high"})

  (approve
    {:label "Approve Requirements"
     :shape "hexagon"})
  {:accept :next
   :revise require}
]

